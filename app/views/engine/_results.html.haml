#content-all
  - binding.pry
  %ul.nav.nav-tabs
    %li
      = link_to 'View performance', results_performance_path, data: { method: :post, remote: true, params: {results: @source, tab: :performance }.to_param }
    %li.active
      = link_to 'View positions', results_positions_path, data: { method: :post, remote: true, params: {results: @source, tab: :positions }.to_param }
  #content-results
    -if @tab == 'performance'
      = render 'results_performance'
    -else
      = render 'results_positions'